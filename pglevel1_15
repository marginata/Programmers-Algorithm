import java.util.Arrays;

class Solution {
    public long solution(long n) {
        long answer = 0;
        
        String str = "";
        str += n; //정수 n을 String으로 변환
        
        char[] arr = str.toCharArray(); //배열에 담는다
        Arrays.sort(arr); //sort 메서드로 오름차순 정렬
        str = ""; //초기화
        
        for(int i=arr.length-1; i>=0; i--){ //역순(내림차순)으로 배치
            str += arr[i];
        }
        answer = Long.parseLong(str); //long형 변수로 변환
        return answer;
    }
}
