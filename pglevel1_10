class Solution {
    public String solution(String phone_number) {
        String answer = "";
        
        //phone_number의 길이만큼 반복문 돌리기
        for(int i=0; i<phone_number.length(); i++){ 
            //마지막 네자리전까지 *
            if(i<phone_number.length()-4){
                answer += "*";
            }else{ //마지막 네자리 전화번호 표시
                answer += phone_number.charAt(i);
            }            
        }        
        return answer;
    }
}
